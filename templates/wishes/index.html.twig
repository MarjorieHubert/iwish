{% extends 'base.html.twig' %}

{% block title %}Ma liste de souhaits{% endblock %}

{% block body %}
<h1 class="text-center mt-4">Ma liste de souhaits</h1>

<a href="{{ path('app_add') }}"><button type="button" class="btn btn-primary m-3">Faire un souhait</button></a>

<div class="row m-3">
  {% for wish in wishes %}
  <div class="col">
    <div class="card m-2" style="width: 25rem;">
      {% if wish.image %}
      <img src="{{ asset('uploads/images/' ~ wish.image) }}" class="card-img-top" alt="...">
      {% else %}
      <p class="text-center mt-4 fw-lighter fst-italic">Aucune image sélectionnée</p>
      {% endif %}
      <div class="card-body">
        <h5 class="card-title">{{ wish.titre }}</h5>
        <p class="card-text">{{ wish.description }}</p>
        <p class="card-text">{{ wish.prix }} €</p>
        <a href="{{ path('app_edit', {id:wish.id}) }}" class="btn btn-warning">Modifier</a>
        <a href="{{ path('app_delete', {id:wish.id}) }}" class="btn btn-danger">Supprimer</a>
        <a href={{ wish.lien }} class="btn btn-primary" target="_blank">Voir l'article</a>
      </div>
    </div>
  </div>
  {% endfor %}
</div>

{% endblock %}
